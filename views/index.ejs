<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header.ejs') %>
    <title>Diabections</title>
</head>
<body style="background-color: rgb(194, 255, 255);">
    <%- include('./partials/navbar.ejs') %>
    
    <h2 class="text-center mt-2">Diabections</h2>

    <div class="text-success">
        <hr>
      </div>


      <div class="container">
        <form action="/" method="post">
        <div class="row g-3 my-1">
            <div class="col">
                <label for="username" class="form-label">Username</label>
              <input type="text" name="username" class="form-control" id="username">
            </div>
            <div class="col">
                <label for="pregnancies" class="form-label">Pregnancies</label>
                <input type="number" name="pregnancies" class="form-control" id="pregnancies">
            </div>
          </div>
        <div class="row g-3 my-1">
            <div class="col">
                <label for="glucose" class="form-label">glucose</label>
              <input type="number" name="glucose" class="form-control" id="glucose">
            </div>
            <div class="col">
                <label for="bp" class="form-label">Blood Pressure</label>
                <input type="number" name="bp" class="form-control" id="bp">
            </div>
          </div>
        <div class="row g-3 my-1">
            <div class="col">
                <label for="SkinThickness" class="form-label">Skin Thickness</label>
              <input type="number" name="skinthickness" class="form-control" id="SkinThickness">
            </div>
            <div class="col">
                <label for="Insulin" class="form-label">Insulin</label>
                <input type="number" name="insulin" class="form-control" id="Insulin">
            </div>
          </div>
        <div class="row g-3 my-1">
            <div class="col">
                <label for="BMI" class="form-label">BMI</label>
              <input type="number" name="bmi" class="form-control" id="BMI" step="any" />
            </div>
            <div class="col">
                <label for="DiabPedigree" class="form-label">Diabetes Pedigree Function</label>
                <input type="number" name="dpf" class="form-control" id="DiabPedigree" step="any" />
            </div>
          </div>
            <div class="col mt-3 w-50 mx-auto d-flex flex-column justify-center align-center">
                <label for="age" class="form-label w-50 mx-auto">Age</label>
                <input type="number" name="age" class="form-control w-50 mx-auto" id="age">
            </div>
      </div>
      <button type="submit" class="px-4 mt-2 d-block mx-auto btn btn-outline-info">Generate</button>
    </form>

    <%- include('./partials/script.ejs') %>
</body>
</html>